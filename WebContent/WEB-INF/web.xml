<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  <servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>com.ecommerce.servlets.Accueil</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
  <servlet>
    <servlet-name>FormClient</servlet-name>
    <servlet-class>com.ecommerce.servlets.FormClient</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormClient</servlet-name>
    <url-pattern>/formClient</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FormCommande</servlet-name>
    <servlet-class>com.ecommerce.servlets.FormCommande</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormCommande</servlet-name>
    <url-pattern>/formCommande</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreationClient</servlet-name>
    <servlet-class>com.ecommerce.servlets.CreationClient</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreationClient</servlet-name>
    <url-pattern>/createClient</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreationCommande</servlet-name>
    <servlet-class>com.ecommerce.servlets.CreationCommande</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreationCommande</servlet-name>
    <url-pattern>/createCommand</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>